%:boolkeys for ligature/swash encoding as default
\define@boolkey{electrum.sty}[electrum@]{lig}[true]{%
	\ifelectrum@lig
		\def\electrum@lig{w}%
	\else
		\def\electrum@lig{}%
	\fi}
%:boolkeys for roman osf/lf
\define@boolkey{electrum.sty}[electrum@]{osf}[true]{%
	\ifelectrum@osf
		\def\electrum@lfosf{j}%
	\else
		\def\electrum@lfosf{}%
	\fi}
\define@boolkey{electrum.sty}[electrum@]{lf}[true]{%
	\ifelectrum@lf
		\def\electrum@lfosf{}%
	\else
		\def\electrum@lfosf{j}%
	\fi}
